{
  "compilerOptions": {
    "target": "es2020",                          
    "module": "commonjs",                        
    "moduleResolution": "node",                  
    "esModuleInterop": true,                     
    "allowSyntheticDefaultImports": true,        
    "resolveJsonModule": true,                   
    "strict": true,                              
    "allowJs": true,                             
    "outDir": "./dist",                          
    "rootDir": "./"                              
  },
  "include": ["**/*"],
  "exclude": ["node_modules", "dist"]
}
